{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "px-to-tailwind",
  "title": "Px to Tailwind",
  "description": "Converts pixels to Tailwind class values",
  "icon": "icon.png",
  "author": "kemiljk",
  "categories": [
    "Developer Tools",
    "Design Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "convert-to-tailwind",
      "title": "Convert To Tailwind",
      "description": "Enables a quick and easy pixel to Tailwind class conversion",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.52.1",
    "@raycast/utils": "^1.7.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
